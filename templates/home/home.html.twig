{% extends 'base.html.twig' %}

{% block title %}CodeWithMe - Accueil
{% endblock %}

{% block body %}

	<div class="main">

		<h1 class="main_title">Le top 3</h1>

		<div class="top_content">
			{% for project in bestProjects %}
				<div class="top_card">
					<div class="top_card_top">
						<div class="top_card_top_infos">
							<p class="top_card_title">{{ project.title }}</p>
							<p class="top_card_owner">Par <a href="#">{{ project.owner.username }}</a></p>
							<p class="top_card_date">Crée le {{ project.createdAt|date("m/d/Y") }}</p>
						</div>
						<div class="top_card_top_image">
							<img src="{{ project.image }}" alt="Image de présentation du projet">
						</div>
					</div>
					<div class="top_card_description">{{ project.description }}</div>
					<div class="top_card_bottom">
						<div class="top_card_tags">
						tags:
						{% for tag in project.tags %}
							{{ tag.name }}
						{% endfor %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}
